<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.Shrine.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/pink_100</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="heading.title1">
        <item name="android:layout_height">28dp</item>
        <item name="android:textSize">26sp</item>
        <item name="android:lineHeight" tools:targetApi="p">28sp</item>
    </style>

    <style name="heading.title2">
        <item name="android:layout_height">24dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:lineHeight" tools:targetApi="p">24sp</item>
    </style>

    <style name="heading.title3">
        <item name="android:layout_height">24dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:lineHeight" tools:targetApi="p">24sp</item>
    </style>

    <style name="heading.headline">
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:lineHeight" tools:targetApi="p">20sp</item>
    </style>

</resources>